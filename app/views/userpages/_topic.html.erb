<% link = blog_topic_path(:blog_id => (@user || topic.user).login, :id => topic.id ) %>
<% content_tag :div,:style => 'border:1px solid;padding:5px;height:auto;margin-bottom:5px' do %>
  <p><%= topic.created_at.strftime("%Y-%m-%d") %></p>
  <h3><%= link_to h(topic.title), link %></h3>
  <p><%=h  topic.body_text %></p>
  <p><%= topic.created_at.strftime(" %H:%M") %> | <%= link_to 'comment', link + '#comment' %>(<%= topic.comments.count %>) </p>
<%end%>
